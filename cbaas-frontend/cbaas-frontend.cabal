library
  exposed-modules: Frontend.Function     
                   Frontend.Utils
                   Frontend.ImageWidget
                   Frontend.WebcamWidget
                   Frontend.Canvas
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >=4.8 && <4.10
                     , aeson
                     , base64-bytestring
                     , bifunctors
                     , bytestring
                     , cbaas-lib
                     , containers
                     , data-default
                     , exception-transformers
                     , ghcjs-dom
                     , groundhog-th
                     , JuicyPixels
                     , mtl
                     , ref-tf
                     , reflex
                     , reflex-dom
                     , text
                     , time
                     , transformers
  if impl(ghcjs)
      build-depends:
                    ghcjs-base

  hs-source-dirs:      src
  default-language:    Haskell2010


executable frontend
  default-language: Haskell2010
  hs-source-dirs: exec
  main-is: Frontend.hs
  build-depends: base,
                 cbaas-lib,
                 cbaas-frontend,
                 reflex,
                 mtl,
                 reflex-dom,
                 text
